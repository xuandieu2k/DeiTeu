<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@color/pink_custom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:dividerHorizontal">@color/green_custom</item>
        <item name="android:dividerVertical">@color/green_custom</item>
        <item name="dividerColor">@color/green_custom</item>
    </style>

    <!-- Dark mode -->
    <style name="CustomDialogTheme.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/black</item>
        <item name="colorAccent">@color/pink_custom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dividerHorizontal">@color/green_custom</item>
        <item name="android:dividerVertical">@color/green_custom</item>
        <item name="dividerColor">@color/green_custom</item>
    </style>
</resources>
