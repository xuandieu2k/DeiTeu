<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <io.woong.shapedimageview.RoundImageView
        android:id="@+id/rounderimg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/couple" />
    <LinearLayout
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:alpha="0.7"
        android:background="@drawable/box_opacity"
        android:backgroundTint="@color/green_custom"
        android:backgroundTintMode="multiply"
        android:clipToOutline="true"
        android:elevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:outlineProvider="background"
        android:padding="20dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Cà phê ban mê"/>
        <TextView
            android:id="@+id/tv_descrip"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="Uống một ly đi 10 dặm"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_address"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="TP HCM"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>